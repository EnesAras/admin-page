{
    "proxy": "http://127.0.0.1:5000",   
  "name": "novacommerce",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "admin",
    "server",
    "store"
  ],
  "scripts": {
    "dev:admin": "npm --workspace admin start",
    "dev:server": "npm --workspace server run dev",
    "dev": "npm-run-all -p dev:server dev:admin",
    "build:admin": "npm --workspace admin run build",
    "test:admin": "npm --workspace admin test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
